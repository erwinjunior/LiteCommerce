@model SV20T1020136.DomainModels.Supplier

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            @Html.HiddenFor(m => m.SupplierID)
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input type="text" class="form-control" name="SupplierName" value="@Model.SupplierName">
                @Html.ValidationMessage(nameof(Model.SupplierName), new { @style = "color: red" })
            </div>
            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color: red" })
            </div>
            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color: red" })
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="Email" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color: red" })
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
            </div>
            <div class="form-group">
                <label>Tỉnh thành:</label>
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class = "form-control" })
                @Html.ValidationMessage(nameof(Model.Province), new { @style = "color: red" })
            </div>
            <div class="form-group">
                <label>Ngày thành lập:</label>
                <input type="hidden" class="form-control" name="DateOfIncorporation" value="@Model.DateOfIncorporation" />
                <input type="text" class="form-control date-picker" name="dateOfIncorporationInput"
                       value="@Model.DateOfIncorporation.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))" />
                @Html.ValidationMessage(nameof(Model.DateOfIncorporation), new { @style = "color: red" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default"><i class="fa fa-arrow-left"></i> Quay lại</a>
            </div>
        </form>
    </div>
</div>