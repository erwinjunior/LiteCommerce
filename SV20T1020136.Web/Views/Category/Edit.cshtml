@model SV20T1020136.DomainModels.Category

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" class="form-control" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" name="CategoryName" value="@Model.CategoryName">
                @Html.ValidationMessageFor(m => m.CategoryName, "", new { @style = "color: red" })
            </div>
            <div class="form-group">
                <label>Mô tả:</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description">
                @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color: red" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>

                <a href="~/Category" class="btn btn-default"><i class="fa fa-arrow-left"></i> Quay lại</a>
            </div>
        </form>
    </div>
</div>