@model SV20T1020136.Web.Models.ProductSeachResult
@{
    Layout = null;
}

<div>
    <!-- Hiển thị kết quả tìm kiếm -->
    <p style="margin: 15px 0">Có <strong>@Model.RowCount</strong> mặt hàng trong tổng số <strong>@Model.PageCount</strong> trang</p>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th style="width: 80px">Ảnh</th>
                    <th style="width: auto">Tên mặt hàng</th>
                    <th style="width: 100px">Đơn vị tính</th>
                    <th style="width: 120px">Giá</th>
                    <th style="width: 100px">Ngừng bán?</th>
                    <th style="width: 80px"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.Data)
                    {
                        <tr>
                            <td><img style="width: 80px" alt="product-image" src="~/images/products/@item.Photo" /></td>
                            <td>@item.ProductName</td>
                            <td>@item.Unit</td>
                            <td>@item.Price</td>
                            <td class="text-center">
                                @if (!item.IsSelling)
                                {
                                    <i style="color: forestgreen" class="fa fa-check"></i>
                                }
                            </td>
                            <td>
                                <a href="~/Product/Edit/@item.ProductID" class="btn btn-xs btn-info"><i class="fa fa-edit"></i></a>
                                <a href="~/Product/Delete/@item.ProductID" class="btn btn-xs btn-danger"><i class="fa fa-remove"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="text-center">
        <ul class="pagination">
            @for (int p = 1; p <= Model.PageCount; ++p)
            {
                if (p == Model.Page)
                {
                    <li class="active"><a>@p</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch('#formSearch', @p)">@p</a></li>
                }
            }
        </ul>
    </div>
</div>