@model SV20T1020136.DomainModels.Shipper
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <input type="text" class="form-control" name="ShipperName" value="@Model.ShipperName">
                @Html.ValidationMessage(nameof(Model.ShipperName), new {@style="color: red"})
            </div>
            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color: red" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>

                <a href="~/Shipper" class="btn btn-default"><i class="fa fa-arrow-left"></i> Quay lại</a>
            </div>
        </form>
    </div>
</div>